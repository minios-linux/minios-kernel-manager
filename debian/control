Package: minios-kernel-manager
Architecture: all
Depends: ${misc:Depends},
         polkitd | policykit-1,
         pkexec | policykit-1,
         python3 (>= 3.7),
         python3-gi,
         gir1.2-gtk-3.0,
         gir1.2-gio-2.0,
